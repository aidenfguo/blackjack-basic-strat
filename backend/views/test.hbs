<!DOCTYPE html>
<html lang = "en">
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            border: 1px solid #dddddd;
            padding: 8px;
        }

        th {
            background-color: #cccccc; /* Gray background color for header cells */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
    <title>Test Your History</title>
</head>
    <h2>Hands</h2>
    <table id="dataTable">
        <thead>
            <tr>
                <th>Dealer Hand</th>
                <th>Player Card 1</th>
                <th>Player Card 2</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each Hands}}
            <tr>
                <td>{{ this.dealerHand }}</td>
                <td>{{ this.playerCardA }}</td>
                <td>{{ this.playerCardB }}</td>
                <td id="actionCell_{{@index}}">
                <button onclick="performAction('hit', {{@index}})">Hit</button>
                <button onclick="performAction('split', {{@index}})">Split</button>
                <button onclick="performAction('double', {{@index}})">Double</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
      <script>
    function performAction(action, index) {
      // Add logic here to handle the button click for the specified action
            const actionCell = document.getElementById(`actionCell_${index}`);
            actionCell.innerHTML = `Action: ${action}`;      // You can send the action to the server or perform other actions as needed
    }
  </script>
</body>